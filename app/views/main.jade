doctype html
html(ng-app="sgrt")
  head
    include includes/metas
    
    title=title

    link(href="/css/bootstrap.min.css" rel="stylesheet")
    link(href="/css/font-awesome/font-awesome.min.css" rel="stylesheet")
    link(href="/css/nprogress/nprogress.css" rel="stylesheet")
    link(href="/css/custom.min.css" rel="stylesheet")

    script(src="/js/angular.min.js")
    script(src="/js/angular-route.min.js")
    
  body(class="nav-md footer_fixed" ng-controller="mainController")
    div(class="container body")
      div(class="main_container")
        div(class="col-md-3 left_col")
          div(class="left_col scroll-view")
            div(class="navbar nav_title" style="border: 0;")
              a(href="#" class="site_title")
                i(class="fa fa-gear")
                span  SGRT
  
            div(class="clearfix")
            
            // Profile men√∫.
            div(class="profile clearfix")
              div(class="profile_pic")
                img(src="/images/user.png" alt="..." class="img-circle profile_img")
              div(class="profile_info")
                span Bienvenido
                 h2 #{user.local.nombre} #{user.local.primerApellido} 
              div(class="clearfix")
            
            br 
              
            include menus/side-bar
        
        include menus/top-navigation
        include content/content
        include footer
        
        include configure/configure-company
    
    script(src="/js/jquery.min.js")
    script(src="/js/bootstrap.min.js")
    script(src="/js/fastclick/fastclick.js")
    script(src="/js/nprogress/nprogress.js")
    script(src="/js/custom.min.js")
    
    script(src="/components/app.js")
