div(id="loginModal" tabindex="-1" role="dialog" class="modal fade")
  div(class="modal-dialog modal-sm")
    div(class="modal-content")
    
      div(class="modal-header")
        button(type="button" data-dismiss="modal" aria-label="Cerrar" class="close")
          span(aria-hidden='true') &times;
        i(aria-hidden="true" style="float: left; padding-right: 10px;" class="fa fa-sign-in fa-3x")
        h2(class="modal-title") SGRT
        h4(class="modal-title") Sistema para la Gestión de Reportes de Trabajo
    
      div(class="modal-body")
        form(action="/login" method="post" class="form-horizontal" )
          h3 Iniciar sesión
          div(class="form-group")
            div(class="col-sm-12")
              div(class="input-group")
                span(class="input-group-addon")
                  i(class="glyphicon glyphicon-envelope")
                input(type="text" placeholder="Correo electrónico" name="correoElectronico" class="form-control")
          div(class="form-group")
            div(class="col-sm-12")
              div(class="input-group")
                span(class="input-group-addon")
                  i(class="glyphicon glyphicon-lock")
                input(type="password" placeholder="Contraseña" name="contrasena" class="form-control") 
          div(class="form-group")
            div(class="col-sm-12")
              input(type="checkbox" class="js-switch")
              label(style="padding-left: 10px;") Recordar mis datos
          div(class="form-group")
            div(class="col-sm-12")
              input(type="submit" value="Aceptar" class="btn btn-primary btn-block")
    
      div(class="modal-footer")
        | ¿No puede iniciar sesión?
        br
        a(href="#") Recuperar contraseña

script.
  $(window).load(function() {
    $('#loginModal').modal('show');
  });

  $(document).ready(function() {
    // Aplicar estílo a los Checkboxes.
    var checkBox = document.querySelector('.js-switch');
    var init = new Switchery(checkBox, {size: 'small'});

    $('#loginModal').on('hidden.bs.modal', function () {
      window.location.href="/";
    });
  });
